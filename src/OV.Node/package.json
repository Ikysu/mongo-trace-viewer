{
  "name": "mongo-oplog-viewer",
  "version": "1.0.0",
  "description": "",
  "bin": "build/server.js",
  "main": "src/server.ts",
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": [
      "build/assets/**/*",
      "build/public/**/*"
    ],
    "outputPath": "dist_bin"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --ignore 'cfg/*.*'",
    "build": "tsc",
    "postbuild": "npm run copy_assets",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "package": "npm run build && pkg package.json",
    "copy_assets": "copyfiles --error --up 1 src/assets/*.* build && copyfiles --error --up 1 src/public/*.* build",
    "docker": "npm i && npm run dev",
    "docker:prod": "npm i && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/contributeless/mongo-oplog-viewer.git"
  },
  "keywords": [
    "mongo",
    "oplog",
    "utility"
  ],
  "author": "contributeless",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/contributeless/mongo-oplog-viewer/issues"
  },
  "homepage": "https://github.com/contributeless/mongo-oplog-viewer#readme",
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.22",
    "@types/winston": "^2.4.4",
    "copyfiles": "^2.4.1",
    "pkg": "^4.5.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongodb": "^3.6.3",
    "nodemon": "^2.0.7",
    "serve-favicon": "^2.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  }
}
