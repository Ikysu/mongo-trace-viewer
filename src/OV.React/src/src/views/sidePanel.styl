.side-panel__wrapper
    position absolute;
    right: 0rem
    top: 0rem
    bottom: 0rem

.side-panel__container
    position sticky
    top: 1rem;
    padding: 0.8rem;
    border: 2px solid rgba(61, 61, 61, 0.70);
    border-radius: 2rem;
    box-shadow: 0 0 15px 15px rgba(137, 137, 137, 0.15);
    background-color: #444;
    color: white;
    .side-panel__page-sizer
        margin-top: 0.8rem


.changes-detector__icon
    width: 1.4rem;
    height 1.4rem;
    fill: #bfbfbf
    &:hover
        fill:#ffffff

.page-sizer
    label
        cursor: pointer;
        padding: 0 0.1rem;
        border-bottom: 3px solid white;
        &:hover
            border-bottom: 3px solid #7fb9fdab;


    input[type="radio"]
        display: none
        opacity: 0
        position: absolute
        left: -9999px
    input:checked + label 
        border-bottom: 3px solid rgb(127 185 253);
        
        
    .form-radio-option__container
        display: flex;
        justify-content: center;
        flex-direction: row
.changes-detector
    cursor: pointer

.page-sizer__container
    .form-radio-option__container 
        margin-bottom: 0.5rem;

.side-panel__changes-detector
    margin-bottom: 0.5rem
    padding: 0 0.3rem

.side-panel-separator
    border-bottom: 1px solid gray;


.side-panel__changes-detector.changes-detector.changes-detector__new-items-present:before
    content: "\0021";
    position: absolute;
    top: -13px;
    left: 28px;
    z-index: 100;
    font-size: 1.6rem;
    color: #f79128;
    font-weight: bold;
.side-panel__changes-detector.changes-detector.changes-detector__check-running
    .changes-detector__icon
        animation: spin 1s linear infinite;
        
.side-panel__changes-detector
    position relative


@keyframes spin { 100% { -webkit-transform: rotate(360deg); transform:rotate(360deg); } }

@media (max-width: 650px) 

   .side-panel__wrapper
        position relative
        margin-bottom: 1rem
   .side-panel__changes-detector
        display: flex;
        flex-direction: column;
        align-items: center;